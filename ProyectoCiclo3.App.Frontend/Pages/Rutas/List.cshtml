@page
@model ProyectoCiclo3.App.Frontend.Pages.ListRutasModel;
@{
}
<style>
body {
  background-image: url('https://images.pexels.com/photos/12374211/pexels-photo-12374211.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: 100% 100%;
}
</style>
<table class="table table-black">
  <thead class="thead-black">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Origen</th>
      <th scope="col">Destino</th>
      <th scope="col">Tiempo estimado</th>
      
    </tr>
  </thead>

 @foreach (var ruta in Model.Rutas)
    {
        <tr>
            <td>@ruta.id</td>
            <td>@ruta.origen.nombre / @ruta.origen.ciudad</td>
            <td>@ruta.destino.nombre / @ruta.destino.ciudad</td>
            <td>@ruta.tiempo_estimado</td>
            
            <td>
              <a class="btn btn-info" asp-page="./Details" asp-route-rutaId="@ruta.id"><i class="fas fa-adjust"></i>Ver</a>
              <a class="btn btn-info" asp-page="./Edit" asp-route-rutaId="@ruta.id">Editar</a>
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal_@ruta.id">
                  Eliminar
                </button>
 
                <div class="modal fade" id="exampleModal_@ruta.id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Eliminacion de Ruta</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          Esta seguro que desea eliminar la ruta @ruta.origen.nombre / @ruta.destino.nombre
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                          <form method="POST">
                            <input type="number" class="form-control d-none" placeholder="id" asp-for="@ruta.id">
                            <button type="submit"class="btn btn-danger" href="">Eliminar</button>
                          </form>
                          </div>
                      </div>
                    </div>
                  </div>
            </td>
        </tr>
    }
  </tbody>
</table>